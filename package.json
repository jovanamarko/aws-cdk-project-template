{
  "name": "credit-pm-backend",
  "version": "0.1.0",
  "bin": {
    "credit-pm-backend": "bin/credit-pm-backend.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "checkTs": "tsc --noEmit",
    "test": "jest --watchAll=true",
    "test:all": "yarn test --watchAll=false -u",
    "test:coverage": "yarn test --watchAll=false -u --coverage",
    "cdk": "cdk",
    "deploy:dev": "cdk deploy --all -c config=dev",
    "deploy:staging": "cdk deploy --all -c config=staging",
    "deploy:prod": "cdk deploy --all -c config=prod",
    "lint": "eslint **/*.ts",
    "format": "eslint **/*.ts --fix",
    "prepare": "husky install"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "aws-cdk-lib": "2.103.0",
    "constructs": "^10.0.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.52.0",
    "jest-junit": "^16.0.0",
    "source-map-support": "^0.5.21"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "20.8.9",
    "aws-cdk": "2.133.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run lint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "jest-junit": {
    "suiteName": "jest tests",
    "output": "junit.xml",
    "usePathForSuiteName": "true",
    "outputDirectory": "coverage"
  },
  "license": "Apache-2.0"
}
